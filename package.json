{
  "name": "shorty",
  "version": "0.0.1",
  "type": "module",
  "description": "simple url shortner",
  "scripts": {
    "start": "[ -x ./dist/shorty ] && ./dist/shorty",
    "clean": "rm -rf dist/ node_modules",
    "build": "bun run --env-file .env ./scripts/build-main.ts",
    "dev": "bun run --env-file .env ./src/server/main.ts",
    "test": "bun run ./test/autocannon.test.ts",
    "start:cluster": "[ -x ./dist/shorty-cluster ] && ./dist/shorty-cluster",
    "build:cluster": "bun run --env-file .env.cluster ./scripts/build-cluster.ts",
    "dev:cluster": "bun run --env-file .env.cluster ./src/server/cluster.ts",
    "test:cluster": "bun run ./test/autocannon-cluster.test.ts"
  },
  "devDependencies": {
    "@types/autocannon": "^7.12.7",
    "@types/bun": "^1.3.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "autocannon": "^8.0.0"
  },
  "dependencies": {
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "mongoose": "^9.2.0",
    "zod": "^4.3.6"
  }
}
